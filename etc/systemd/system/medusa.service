[Unit]
Description=Medusa Daemon
After=network.target

[Service]
EnvironmentFile=/etc/sysconfig/medusa
User=transmission
Group=transmission
Type=forking
ExecStart=/usr/bin/python /data/Medusa/SickBeard.py $DAEMON_ARGS
PIDFile=/run/mediaservices/medusa.pid
GuessMainPID=no
Restart=on-failure
RestartSec=5
Nice=-20

[Install]
WantedBy=multi-user.target
